{
  "name": "vuepress-theme-hope-root",
  "private": true,
  "description": "A light vuepress theme",
  "workspaces": [
    "demo/",
    "packages/@mr-hope/*",
    "packages/vuepress-theme-hope/"
  ],
  "scripts": {
    "build": "tsc --build",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "demo:build": "vuepress build demo/src",
    "demo:serve": "vuepress dev demo/src",
    "dev": "tsc --build --watch",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lint": "prettier --check --write . && eslint . --ext .js,.ts,.vue --fix && markdownlint **/*.md --ignore **/node_modules/** --fix",
    "packages:check-update": "lerna exec -- ncu --timeout 600000 && ncu --timeout 600000",
    "packages:update": "lerna exec -- ncu -u --timeout 600000 && ncu -u --timeout 600000 && yarn install && yarn upgrade"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.11.0",
    "@typescript-eslint/parser": "4.11.0",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "7.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-vue": "7.4.0",
    "husky": "4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "prettier": "^2.2.1",
    "sort-package-json": "1.48.0",
    "typescript": "^4.1.3"
  }
}
