{
  "name": "vuepress-theme-hope-root",
  "private": true,
  "description": "A light vuepress theme",
  "workspaces": [
    "demo/",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "demo:build": "yarn workspace demo build",
    "demo:serve": "yarn workspace demo serve",
    "dev": "tsc --build --watch",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lint": "prettier --check --write . && eslint . --ext .js,.ts,.vue --fix && markdownlint **/*.md --ignore **/node_modules/** --fix",
    "lint:eslint": "eslint . --ext .js,.ts,.vue --fix",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 && yarn install && yarn upgrade",
    "test": "jest -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "11.1.0",
    "@rollup/plugin-typescript": "8.1.0",
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "7.0.0",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-vue": "7.5.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "npm-check-updates": "^11.1.1",
    "postcss-scss": "^3.0.4",
    "prettier": "2.2.1",
    "rollup": "2.38.1",
    "rollup-plugin-dts": "2.0.1",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "rollup-plugin-vue": "6.0.0",
    "sass": "1.32.5",
    "sort-package-json": "1.48.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "typescript": "4.1.3"
  }
}
